<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CameraControlActivity">

    <TextView
        android:id="@+id/tv_camera_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摄像头信息"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:layout_marginBottom="8dp">

        <WebView
            android:id="@+id/webview_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="用户名 (默认: admin)"
            android:layout_marginEnd="4dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="密码 (默认: admin)"
            android:inputType="textPassword"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接摄像头"
        android:background="@drawable/bg_button_primary"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/layout_control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="摄像头控制"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_pan_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="左移"
                android:background="@drawable/bg_button_secondary"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_tilt_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="上移"
                    android:background="@drawable/bg_button_secondary"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/btn_tilt_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="下移"
                    android:background="@drawable/bg_button_secondary"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_pan_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="右移"
                android:background="@drawable/bg_button_secondary"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_zoom_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="放大"
                android:background="@drawable/bg_button_secondary"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_zoom_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="缩小"
                android:background="@drawable/bg_button_secondary"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_snapshot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="截图"
                android:background="@drawable/bg_button_secondary"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>